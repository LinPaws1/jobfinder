<%- include('../partials/head', { title: 'Request Interview' }) %>
<body>
  <%- include('../partials/nav') %>
  <main class="container">
    <div class="page-header">
      <h1>Request interview</h1>
      <p class="subtitle">Request an interview for this role. The employer will set the date and time.</p>
    </div>
    <div class="card" style="margin-bottom: 1rem;">
      <p><strong>Job:</strong> <%= job.title %></p>
      <p><strong>Company:</strong> <%= job.employer && (job.employer.companyName || job.employer.email) %></p>
      <% if (job.location || job.jobType) { %><p class="meta-row"><%= job.location || '' %> <%= job.jobType ? job.jobType : '' %></p><% } %>
    </div>
    <form method="post" action="/interviews/request/<%= job._id %>" class="card form">
      <button type="submit" class="btn">Request interview</button>
    </form>
  </main>
  <%- include('../partials/footer') %>
</body>
</html>
