<%- include('../partials/head', { title: job ? 'Edit Job' : 'Post a Job' }) %>
<body>
  <%- include('../partials/nav') %>
  <main class="container">
    <h1><%= job ? 'Edit job' : 'Post a new job' %></h1>
    <form method="post" action="<%= job ? '/jobs/' + job._id + '?_method=PUT' : '/jobs' %>" class="card form">
      <label>Title <input type="text" name="title" value="<%= job ? job.title : '' %>" required></label>
      <label>Description <textarea name="description" rows="5" required><%= job ? job.description : '' %></textarea></label>
      <label>Requirements <textarea name="requirements" rows="3"><%= job ? job.requirements : '' %></textarea></label>
      <label>Location <input type="text" name="location" value="<%= job ? job.location : '' %>"></label>
      <label>Job type
        <select name="jobType">
          <option value="Full-time" <%= job && job.jobType === 'Full-time' ? 'selected' : '' %>>Full-time</option>
          <option value="Part-time" <%= job && job.jobType === 'Part-time' ? 'selected' : '' %>>Part-time</option>
          <option value="Contract" <%= job && job.jobType === 'Contract' ? 'selected' : '' %>>Contract</option>
          <option value="Remote" <%= job && job.jobType === 'Remote' ? 'selected' : '' %>>Remote</option>
        </select>
      </label>
      <button type="submit" class="btn"><%= job ? 'Update' : 'Create' %> job</button>
    </form>
  </main>
</body>
</html>
